---
import Section from "../components/section.astro";
import SectionHeader from "../components/sectionHeader.astro";
import Button from "../components/button.astro";
import Container from "../components/container.astro";

interface ContactInformation {
  fontIconClass: string;
  infoName: string;
  info: string;
}

const contactInformation: ContactInformation[] = [
  {
    fontIconClass: "fa fa-location",
    infoName: "Location",
    info: "Bldg 5, Duterte Street, Davao City, Philippines ",
  },
  {
    fontIconClass: "fa fa-envelope",
    infoName: "Email",
    info: "info@email.com",
  },
  {
    fontIconClass: "fa fa-phone",
    infoName: "Call",
    info: "+63 912 345 6789",
  },
  {
    fontIconClass: "fa fa-clock",
    infoName: "Open Hours",
    info: "Monday - Friday, 9:00AM - 05:00PM",
  },
];

const inputClassStyles =
  "w-full px-3 py-2.5 text-lg font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none";
---

<Section id="contact">
  <Container>
    <SectionHeader
      title="Contact Us"
      paragraph="Green Clean is a professional cleaning company that offers eco-friendly cleaning."
    />
  </Container>
  <div class="mapouter">
    <div class="gmap_canvas">
      <iframe
        width="100%"
        height="100%"
        id="gmap_canvas"
        src="https://maps.google.com/maps?q=california&t=&z=10&ie=UTF8&iwloc=&output=embed"
      ></iframe><a href="https://2yu.co">2yu</a><br />
      <style>
        .mapouter {
          position: relative;
          text-align: right;
          height: 550px;
          width: 100%;
        }
      </style><a href="https://embedgooglemap.2yu.co/">html embed google map</a
      ><style>
        .gmap_canvas {
          overflow: hidden;
          background: none !important;
          height: 100%;
          width: 100%;
        }
      </style>
    </div>
  </div>
  <Container>
    <SectionHeader
      title="Get In Touch"
      paragraph="Green Clean is a professional cleaning company that offers eco-friendly cleaning."
      className="pt-16"
    />

    <div class="lg:grid grid-cols-3 mb-5 gap-x-10">
      <div class="col-start-1 col-end-2">
        {
          contactInformation.map((item) => {
            return (
              <div class="flex gap-x-5 mb-20">
                <i class={`${item.fontIconClass} text-3xl text-primary`} />
                <div class="block">
                  <h3 class="text-gray-600 text-xl md:text-2xl leading-tight font-semibold uppercase mb-4 after:block after:h-[2px] md:after:h-1 after:w-full after:bg-gray-200 w-fit after:mt-2">
                    {item.infoName}
                  </h3>
                  <p class="text-sm">{item.info}</p>
                </div>
              </div>
            );
          })
        }
      </div>
      <div class="col-start-2 col-end-4">
        <form class="xl:p-10 w-full bg-white">
          <div class="grid grid-cols-2 gap-7 mb-7">
            <input
              type="text"
              name="name"
              id="name"
              placeholder="Your Name"
              class={inputClassStyles}
            />
            <input
              type="email"
              name="email"
              id="email"
              placeholder="Your Email"
              class={inputClassStyles}
            />
          </div>
          <input
            type="text"
            name="subject"
            id="subject"
            placeholder="Subject"
            class={`${inputClassStyles} mb-7`}
          />
          <textarea
            name="message"
            id="message"
            rows="10"
            class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none mb-7"
            placeholder="Your Message"
          >
          </textarea>
          <div class="flex space-x-2 justify-center">
            <Button className="uppercase font-semibold text-sm">Submit</Button>
          </div>
        </form>
      </div>
    </div>
  </Container>
</Section>
